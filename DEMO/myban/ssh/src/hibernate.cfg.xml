<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>
	
	<session-factory>
		<!-- 数据库链接 -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/cloud_note</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- 在控制台显示底层SQL语句 -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property><!-- 格式化分行显示 -->
		<!-- 开启二级缓存 -->
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.provider_class">net.sf.ehcache.hibernate.EhCacheProvider</property>
		
		<!-- 开启查询缓存 -->
		<property name=""></property>
		
		<!-- <property name="myeclipse.connection.profile">mysql</property> -->
		
		<!-- 加载映射描述信息 -->
		<mapping resource="org/tarena/hbm/Emp.hbm.xml" />
		<!-- 关联映射，采用一对多方式加载NoteBook -->
		<set name="books">
			<key column="cn_user_id"></key><!-- 指明加载哪个文件，并以哪个字段为关联条件 -->
			<one-to-many class="org.tarena.entity.NoteBook.class"></one-to-many>
		</set>
	</session-factory>

</hibernate-configuration>